{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "no-console": 0,
    "react/jsx-uses-vars": 1,
    "react/jsx-closing-bracket-location": [
      1,
      "after-props"
    ],
    "react/self-closing-comp": 2,
    "react/jsx-tag-spacing": [
      1,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never"
      }
    ],
    "react/jsx-indent-props": [
      1,
      2
    ],
    "react/jsx-equals-spacing": [
      1,
      "never"
    ],
    "react/jsx-pascal-case": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "indent": [
      1,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      1,
      "unix"
    ],
    "semi": [
      1,
      "always"
    ],
    "comma-dangle": [
      1,
      "never"
    ],
    "prefer-const": [
      1,
      {
        "destructuring": "any"
      }
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "all",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ],
    "object-curly-spacing": [
      1,
      "always"
    ],
    "comma-spacing": 2
  }
}
